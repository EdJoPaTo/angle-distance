{
	"name": "angle-distance",
	"version": "1.0.0",
	"description": "Calculates the difference between two angles",
	"license": "MIT",
	"repository": "EdJoPaTo/angle-distance",
	"author": {
		"name": "EdJoPaTo",
		"email": "angle-distance-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepare": "npm run build",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"main": "dist/index.js",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"types": "dist/index.d.ts",
	"keywords": [
		"arc",
		"angle",
		"angular",
		"degree",
		"radian",
		"distance",
		"difference"
	],
	"dependencies": {},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"ava": "^3.14.0",
		"del-cli": "^3.0.1",
		"nyc": "^15.1.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.2",
		"xo": "^0.36.1"
	},
	"nyc": {
		"all": true,
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
